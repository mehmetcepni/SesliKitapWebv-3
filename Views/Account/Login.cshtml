@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    
    .tab-buttons {
        display: flex;
        margin-bottom: 30px;
    }
    
    .tab-button {
        flex: 1;
        text-align: center;
        padding: 10px;
        border: none;
        background: transparent;
        font-weight: bold;
        cursor: pointer;
        position: relative;
    }
    
    .active-tab {
        background: linear-gradient(90deg, #ff2d55 0%, #ff9500 100%);
        border-radius: 25px;
        color: white;
        box-shadow: 0 2px 10px rgba(255, 45, 85, 0.3);
    }
    
    .inactive-tab {
        color: #333;
    }
    
    .social-login {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }
    
    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        margin: 0 10px;
        border-radius: 50%;
        background: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        cursor: pointer;
    }
    
    .social-icon.facebook {
        color: #3b5998;
    }
    
    .social-icon.twitter {
        color: #1da1f2;
    }
    
    .social-icon.google {
        color: #db4437;
    }
    
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: none;
        border-bottom: 1px solid #ddd;
        outline: none;
        font-size: 14px;
    }
    
    .form-check {
        margin-bottom: 20px;
    }
    
    .login-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 25px;
        background: linear-gradient(90deg, #ff2d55 0%, #ff9500 100%);
        color: white;
        font-weight: bold;
        cursor: pointer;
        box-shadow: 0 2px 10px rgba(255, 45, 85, 0.3);
    }
    
    .login-btn:hover {
        opacity: 0.9;
    }
</style>

<div class="login-container">
    <div class="tab-buttons">
        <a asp-action="Login" class="tab-button active-tab">Log In</a>
        <a asp-action="Register" class="tab-button inactive-tab">Register</a>
    </div>
    
    <div class="social-login">
        <div class="social-icon facebook">
            <i class="fab fa-facebook-f"></i>
        </div>
        <div class="social-icon twitter">
            <i class="fab fa-twitter"></i>
        </div>
        <div class="social-icon google">
            <i class="fab fa-google"></i>
        </div>
    </div>
    
    <form asp-action="Login">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Şifre" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Şifreyi Hatırla</label>
        </div>
        
        <button type="submit" class="login-btn">Giriş Yap</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}